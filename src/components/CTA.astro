---
// Import the component and all the images you want to use with it
import CSPicture from "@components/TemplateComponents/CSPicture.astro";
import mobileImage from "@assets/images/CTA/construction-m.jpg"
import desktopImage from "@assets/images/CTA/cabinets2.jpg"
import fallbackImage from "@assets/images/CTA/cabinets2.jpg"
---

<!-- ============================================ -->
<!--                    Quote                     -->
<!-- ============================================ -->

<section id="quote-1307">
    <div class="cs-container">
        <div class="cs-content">
            <p class="cs-quote">
                HACBED serves this place called Hawai'i, as well as those who choose to be of this place and work to make it their home.
            </p>
            <span class="cs-name">Robert Agres</span>
           <!--  <span class="cs-job">Creative Director</span> -->
        </div>
    </div>
    <!--Background Image-->
    <picture class="cs-background">
        <source media="(max-width: 600px)"
                srcset="/assets/images/kalo-home-img.jpg">
        <source media="(min-width: 601px)"
                srcset="/assets/images/kalo-home-img.jpg">
        <img aria-hidden="true" loading="lazy" decoding="async"
                src="/assets/images/kalo-home-img.jpg"
                alt="kalo field" width="360" height="316">
    </picture>
</section>

<style lang="less">
  
/*-- -------------------------- -->
<---         Services           -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #quote-1307 {
        position: relative;
        z-index: 1;

        .cs-container {
            width: 100%;
            max-width: (1280/16rem);
            margin: auto;
            box-sizing: border-box;
            padding: var(--sectionPadding);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .cs-content {
            width: 100%;
            max-width: (850/16rem);
            display: flex;
            flex-direction: column;
            /* centers content horizontally, set to flex-start to left align */
            align-items: center;
            /* set text align to left if content needs to be left aligned */
            text-align: center;
        }

        .cs-quote {
            /* 31px - 49px */
            font-size: clamp(1.9375rem, 5.1vw, 3.0625rem);
            line-height: 1.2em;
            font-weight: 400;
            margin: 0;
            margin-bottom: (24/16rem);
            color: #fff;
            text-align: inherit;
        }

        .cs-name {
            /* 20px - 25px */
            font-size: clamp(1.25rem, 3.25vw, 1.5625rem);
            line-height: 1.2em;
            font-weight: 700;
            margin: 0;
            margin-bottom: (8/16rem);
            color: var(--primary);
            display: block;
            text-align: inherit;
        }

        .cs-job {
            font-size: (16/16rem);
            line-height: 1.5em;
            margin: 0;
            color: #f7f7f7;
            text-align: inherit;
        }

        .cs-background {
            width: 100%;
            height: 100%;
            background-color: #1a1a1a;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;

            /* darkened overlay */
            &::before {
                content: "";
                width: 100%;
                height: 100%;
                position: absolute;
                z-index: 1;
            }

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                opacity: 0.24;
                position: absolute;
                top: 0;
                left: 0;
            }
        }
    }
}

                                
</style>