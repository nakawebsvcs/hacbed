---
export interface Props {
  name: string;
  bio: string;
  imageUrl: string;
  imageAlt?: string;
  video?: string;
}

const { name, bio, imageUrl, imageAlt = `Founder ${name}`, video } = Astro.props;
---

<li class="cs-item">
  <div class="cs-picture">
    <img src={imageUrl} alt={imageAlt} width="305" height="400" loading="lazy" decoding="async">
  </div>
  <span class="cs-name">{name}</span>
  <span class="cs-bio">
  {bio}
</span>
{video && <div class="cs-bio-video">
    <a href={video} class="cs-link" aria-label={`Watch ${name}'s video`} rel="noopener noreferrer">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="#ffffff">
        <circle cx="12" cy="12" r="11" fill="var(--primary)" opacity="0.7"/>
        <path d="M16.5 12l-7.5 4.33v-8.66l7.5 4.33z" fill="#ffffff"/>
      </svg>
    </a>
  </div>}
</li>
