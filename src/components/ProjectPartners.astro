---
import { Image } from "astro:assets";
import "@styles/blog.less";

const { partners } = Astro.props;
---

<!-- ============================================ --><!--                Project Partners                --><!-- ============================================ -->
<div class="blog-sidebar">
  <div class="blog-featured-group">
    <span class="blog-header">Learn more about our partner(s):</span>
    {
      partners && partners.length > 0 ? (
        partners.map((partner) => (
          <a class="blog-feature project-partner" href={partner.link || "#"} target="_blank" rel="noopener noreferrer">
            <picture class="partnerImage">
              {partner.image && (
                <img
                  src={partner.image.startsWith('/') ? partner.image : `/${partner.image}`}
                  alt="Partner logo"
                  loading="lazy"
                  style="max-width: 300px; max-height: 200px; width: auto; height: auto; object-fit: contain;"
                />
              )}
            </picture>
          </a>
        ))
      ) : (
        <p>No partners to display</p>
      )
    }
  </div>
</div>
