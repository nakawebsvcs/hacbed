---
export interface Props {
  name: string;
  jobTitle: string;
  bio: string;
  imageUrl: string;
  imageAlt?: string;
}

const { name, jobTitle, bio, imageUrl, imageAlt = `Board member ${name}` } = Astro.props;
---

<li class="cs-item">
  <div class="cs-picture">
    <img src={imageUrl} alt={imageAlt} width="305" height="400" loading="lazy" decoding="async">
</div>
  </div>
  <span class="cs-name">{name}</span>
  <span class="cs-job">{jobTitle}</span>
  <span class="cs-bio">{bio}</span>
</li>